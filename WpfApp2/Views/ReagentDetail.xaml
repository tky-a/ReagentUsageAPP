<UserControl x:Class="WpfApp2.Views.ReagentDetail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:WpfApp2.Views"
             mc:Ignorable="d">
    <!--d:DesignHeight="600" d:DesignWidth="800">-->

    <Grid Background="Lavender">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="薬品の詳細"
                   FontSize="30"
                   Margin="20 0 0 10"
                   Grid.ColumnSpan="2"
                   Grid.Row="0"/>

        <Border Grid.ColumnSpan="2" Grid.Row="1" Grid.Column="0" BorderBrush="Transparent" BorderThickness="1" Margin="3" Background="White" CornerRadius="5"/>
        <Border Grid.ColumnSpan="2" Grid.Row="2" Grid.Column="0" BorderBrush="Transparent" BorderThickness="1" Margin="3" Background="White" CornerRadius="5"/>
        <Border Grid.ColumnSpan="2" Grid.Row="3" Grid.Column="0" BorderBrush="Transparent" BorderThickness="1" Margin="3" Background="White" CornerRadius="5"/>
        <Border Grid.ColumnSpan="2" Grid.Row="4" Grid.Column="0" BorderBrush="Transparent" BorderThickness="1" Margin="3" Background="White" CornerRadius="5"/>
        <Border Grid.ColumnSpan="2" Grid.Row="5" Grid.Column="0" BorderBrush="Transparent" BorderThickness="1" Margin="3" Background="White" CornerRadius="5"/>
        <Border Grid.ColumnSpan="2" Grid.Row="6" Grid.Column="0" BorderBrush="Transparent" BorderThickness="1" Margin="3" Background="White" CornerRadius="5"/>
        <Border Grid.ColumnSpan="2" Grid.Row="7" Grid.Column="0" BorderBrush="Transparent" BorderThickness="1" Margin="3" Background="White" CornerRadius="5"/>
        <Border Grid.ColumnSpan="2" Grid.Row="8" Grid.Column="0" BorderBrush="Transparent" BorderThickness="1" Margin="3" Background="White" CornerRadius="5"/>

        <Label Grid.Row="1" FontSize="15" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5" Content="薬品ID :"/>
        <Label Grid.Row="2" FontSize="15" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5" Content="薬品名 :"/>
        <Label Grid.Row="3" FontSize="15" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5" Content="毒・劇・危 :"/>
        <Label Grid.Row="4" FontSize="15" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5" Content="現在質量 :"/>
        <Label Grid.Row="5" FontSize="15" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5" Content="貸借状態 :"/>
        <Label Grid.Row="6" FontSize="15" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5" Content="保管場所 :"/>
        <Label Grid.Row="7" FontSize="15" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5" Content="最終賃借者 :"/>
        <Label Grid.Row="8" FontSize="15" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5" Content="最終使用月日 :"/>

        <TextBlock Grid.Row="1" Grid.Column="1" VerticalAlignment="Bottom" FontSize="18" HorizontalAlignment="Center" Margin="5" Text="{Binding ChemicalId}" />
        <TextBlock Grid.Row="2" Grid.Column="1" VerticalAlignment="Bottom" FontSize="18" HorizontalAlignment="Center" Margin="5" Text="{Binding Name}"/>
        <TextBlock Grid.Row="3" Grid.Column="1" VerticalAlignment="Bottom" FontSize="18" HorizontalAlignment="Center" Margin="5" Text="{Binding Class}"/>
        <TextBlock Grid.Row="4" Grid.Column="1" VerticalAlignment="Bottom" FontSize="18" HorizontalAlignment="Center" Margin="5" Text="{Binding CurrentMass}"/>
        <TextBlock Grid.Row="5" Grid.Column="1" VerticalAlignment="Bottom" FontSize="18" HorizontalAlignment="Center" Margin="5" Text="{Binding UseStatus}"/>
        <TextBlock Grid.Row="6" Grid.Column="1" VerticalAlignment="Bottom" FontSize="18" HorizontalAlignment="Center" Margin="5" Text="{Binding StorageLocationName?}"/>
        <TextBlock Grid.Row="7" Grid.Column="1" VerticalAlignment="Bottom" FontSize="18" HorizontalAlignment="Center" Margin="5" Text="{Binding LastUserName}"/>
        <TextBlock Grid.Row="8" Grid.Column="1" VerticalAlignment="Bottom" FontSize="18" HorizontalAlignment="Center" Margin="5" Text="{Binding LastUseDate, StringFormat='yyyy/MM/dd'}"/>
        
        <TextBlock Grid.Row="1" Grid.Column="2" Grid.RowSpan="8" VerticalAlignment="Bottom" Text="{Binding Note}" FontSize="25" HorizontalAlignment="Left" Margin="5"/>

        <Button Grid.Row="9" Grid.Column="2" Margin="10 0 0 0" Content="閉じる" Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"/>

        <!--<Border Grid.Row="1" Grid.ColumnSpan="2" BorderBrush="Purple" BorderThickness="0 0 0 1" Margin="50 0 0 3"/>
        <Border Grid.Row="2" Grid.ColumnSpan="2" BorderBrush="Purple" BorderThickness="0 0 0 1" Margin="50 0 0 3"/>
        <Border Grid.Row="3" Grid.ColumnSpan="2" BorderBrush="Purple" BorderThickness="0 0 0 1" Margin="50 0 0 3"/>
        <Border Grid.Row="4" Grid.ColumnSpan="2" BorderBrush="Purple" BorderThickness="0 0 0 1" Margin="50 0 0 3"/>
        <Border Grid.Row="5" Grid.ColumnSpan="2" BorderBrush="Purple" BorderThickness="0 0 0 1" Margin="50 0 0 3"/>
        <Border Grid.Row="6" Grid.ColumnSpan="2" BorderBrush="Purple" BorderThickness="0 0 0 1" Margin="50 0 0 3"/>
        <Border Grid.Row="7" Grid.ColumnSpan="2" BorderBrush="Purple" BorderThickness="0 0 0 1" Margin="50 0 0 3"/>
        <Border Grid.Row="8" Grid.ColumnSpan="2" BorderBrush="Purple" BorderThickness="0 0 0 1" Margin="50 0 0 3"/>-->


    </Grid>


</UserControl>
