<UserControl x:Class="WpfApp2.Views.ReagentDetail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:WpfApp2.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="薬品の詳細"
                   FontSize="30"
                   Margin="20 0 0 10"
                   Grid.ColumnSpan="2"
                   Grid.Row="0"/>

        <Label Grid.Row="1" Content="薬品ID" FontSize="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5"/>
        <Label Grid.Row="2" Content="薬品名" FontSize="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5"/>
        <Label Grid.Row="3" Content="毒・劇・危" FontSize="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5"/>
        <Label Grid.Row="4" Content="現在質量" FontSize="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5"/>
        <Label Grid.Row="5" Content="貸借状態" FontSize="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5"/>
        <Label Grid.Row="6" Content="保管場所" FontSize="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5"/>
        <Label Grid.Row="7" Content="最終賃借者" FontSize="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5"/>
        <Label Grid.Row="8" Content="最終使用月日" FontSize="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5"/>

        <TextBlock Grid.Row="1" Grid.Column="1" VerticalAlignment="Bottom" FontSize="25" HorizontalAlignment="Left" Margin="5" Text="{Binding ChemicalId}" />
        <TextBlock Grid.Row="2" Grid.Column="1" VerticalAlignment="Bottom" FontSize="25" HorizontalAlignment="Left" Margin="5" Text="{Binding Name}"/>
        <TextBlock Grid.Row="3" Grid.Column="1" VerticalAlignment="Bottom" FontSize="25" HorizontalAlignment="Left" Margin="5" Text="{Binding Class}"/>
        <TextBlock Grid.Row="4" Grid.Column="1" VerticalAlignment="Bottom" FontSize="25" HorizontalAlignment="Left" Margin="5" Text="{Binding CurrentMass}"/>
        <TextBlock Grid.Row="5" Grid.Column="1" VerticalAlignment="Bottom" FontSize="25" HorizontalAlignment="Left" Margin="5" Text="{Binding UseStatus}"/>
        <TextBlock Grid.Row="6" Grid.Column="1" VerticalAlignment="Bottom" FontSize="25" HorizontalAlignment="Left" Margin="5" Text="{Binding StorageLocationName?}"/>
        <TextBlock Grid.Row="7" Grid.Column="1" VerticalAlignment="Bottom" Text="{Binding LastUserName}" FontSize="25" HorizontalAlignment="Left" Margin="5"/>
        <TextBlock Grid.Row="8" Grid.Column="1" VerticalAlignment="Bottom" Text="{Binding LastUseDate, StringFormat='yyyy/MM/dd'}" FontSize="25" HorizontalAlignment="Left" Margin="5"/>
        
        <TextBlock Grid.Row="1" Grid.Column="2" Grid.RowSpan="8" VerticalAlignment="Bottom" Text="{Binding Note}" FontSize="25" HorizontalAlignment="Left" Margin="5"/>

        <Border Grid.Row="1" Grid.ColumnSpan="2" BorderBrush="MediumPurple" BorderThickness="0 0 0 1" Margin="50 0 50 0"/>
        <Border Grid.Row="2" Grid.ColumnSpan="2" BorderBrush="MediumPurple" BorderThickness="0 0 0 1" Margin="50 0 50 0"/>
        <Border Grid.Row="3" Grid.ColumnSpan="2" BorderBrush="MediumPurple" BorderThickness="0 0 0 1" Margin="50 0 50 0"/>
        <Border Grid.Row="4" Grid.ColumnSpan="2" BorderBrush="MediumPurple" BorderThickness="0 0 0 1" Margin="50 0 50 0"/>
        <Border Grid.Row="5" Grid.ColumnSpan="2" BorderBrush="MediumPurple" BorderThickness="0 0 0 1" Margin="50 0 50 0"/>
        <Border Grid.Row="6" Grid.ColumnSpan="2" BorderBrush="MediumPurple" BorderThickness="0 0 0 1" Margin="50 0 50 0"/>
        <Border Grid.Row="7" Grid.ColumnSpan="2" BorderBrush="MediumPurple" BorderThickness="0 0 0 1" Margin="50 0 50 0"/>
        <Border Grid.Row="8" Grid.ColumnSpan="2" BorderBrush="MediumPurple" BorderThickness="0 0 0 1" Margin="50 0 50 0"/>

    </Grid>


</UserControl>
