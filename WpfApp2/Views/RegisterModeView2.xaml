<Window x:Class="WpfApp2.Views.RegisterModeView2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2.Views"
        mc:Ignorable="d"
        Title="RegisterModeView2" Height="500" Width="1000"
        FontFamily="Segoe UI" FontSize="22"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Style="{StaticResource MaterialDesignWindow}">
    <Grid>
        <Grid x:Name="FirstViewPanel" Visibility="Visible" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.7*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.8*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button x:Name="btnToTESTMode" Click="btnToTESTView_Click"
                Width="350" Height="200" 
                Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2"
                HorizontalAlignment="center">
                <TextBlock Text="貸出返却を&#x0A;はじめる" FontSize="55" 
                           Foreground="White" TextAlignment="Center"/>
            </Button>

            <Button Width="100" Height="100" Grid.Column="3" Grid.Row="2"
                    HorizontalAlignment="Right" Margin="0 0 20 10">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="LightBlue" StrokeThickness="2"/>
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
                <TextBlock Text="新規/破棄" FontSize="21" Foreground="White"/>
            </Button>

            <Button Width="100" Height="100" Grid.Column="3" Grid.Row="3"
                    HorizontalAlignment="Right" Margin="0 0 20 10">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="LightBlue" StrokeThickness="2"/>
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
                <TextBlock Text="設定" FontSize="38" Foreground="White"/>
            </Button>
        </Grid>

        
        
        
        <Grid x:Name="RegisterModePanel" Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="3" Visibility="Visible" x:Name="Panel">
                <StackPanel Orientation="Vertical" VerticalAlignment="Top"
                            Margin="0 0 0 0">
                    <TextBlock Text="" Margin="5"/>
                    <TextBox x:Name="InputBox" MinWidth="250" Width="auto"
                             Height="auto" 
                            FontSize="20" BorderBrush="Black"
                            Background="GhostWhite"
                            Margin="0 80 0 10"
                            materialDesign:HintAssist.Hint=" 薬品IDをスキャン・入力"
                            materialDesign:HintAssist.HelperTextFontSize="12"                                                         
                            materialDesign:HintAssist.HelperText=" バーコードをスキャンするか入力"
                            />
                </StackPanel>
                <Image  x:Name="ImgPanel"
                        HorizontalAlignment="Right"
                        Source="/Resources/Images/scan.png"
                        Height="200" Margin="20 -70 0 0"/>
            </StackPanel>

            <!--<StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" 
                        HorizontalAlignment="Center" Background="Transparent"
                        Margin="3" Visibility="Visible" x:Name="Panel2">
                <StackPanel Orientation="Vertical" VerticalAlignment="Top" 
                            Margin="0 0 0 0">
                    <TextBlock Text="" Margin="5"/>
                    <TextBox x:Name="Mass" Width="auto" Height="auto"
                            FontSize="20" BorderBrush="Black"
                             Background="GhostWhite"
                             Margin="15 10 0 0" VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="質量を送信・入力"
                            materialDesign:HintAssist.HelperTextFontSize="12"
                            materialDesign:HintAssist.HelperText="単位は不要"/>
                </StackPanel>
                <Image HorizontalAlignment="Right"
                    Source="/Resources/Images/weighing2.png"
                    Height="200" Margin="20 -70 0 0"/>
            </StackPanel>

            <StackPanel Grid.Row="0" Orientation="Horizontal"
                        Margin="3" Visibility="Hidden" x:Name="Panel3">
                <StackPanel Orientation="Vertical" Margin="5">
                    <TextBlock Text="" Margin="5"/>
                    <TextBox x:Name="UserID" Width="200" Height="auto"
                            FontSize="20" BorderBrush="Black"
                            Background="GhostWhite"
                            Margin="5 10 0 0" VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="スキャンまたは入力"
                            materialDesign:HintAssist.HelperTextFontSize="12"
                            materialDesign:HintAssist.HelperText="使用者IDをスキャンまたは入力"
                        />
                </StackPanel>
                <Image HorizontalAlignment="Right"
                    Source="/Resources/Images/weighing2.png"
                    Height="auto"/>
            </StackPanel>-->

            
            
            <DockPanel VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="-250 100 0 0"
                       Grid.Row="1" Grid.ColumnSpan="2">
                <StackPanel Orientation="Horizontal"
                            Margin="2" Height="40" HorizontalAlignment="Center">
                    <Button x:Name="btnReturn"
                                Content="戻る" Visibility="Visible"                            
                                VerticalAlignment="Top"
                                Margin="0 0 50 0" Background="Transparent"
                                ForceCursor="False"
                                Height="auto"
                                Width="auto"
                                Foreground="Black"
                                />
                    <Button x:Name="btnNext"
                                Content="次へ" Visibility="Visible"                           
                                VerticalAlignment="Top"
                                Margin="50 0 0 0" Background="Transparent"
                                Height="auto"
                                Width="auto"
                                Foreground="Black"
                                Click="btnNext_Click"
                                />
                </StackPanel>
            </DockPanel>

            

            
        </Grid>
    </Grid>
</Window>
