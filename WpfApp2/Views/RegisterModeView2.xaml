<UserControl x:Class="WpfApp2.Views.RegisterModeView2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2.Views"
        mc:Ignorable="d"
        MaxWidth="1200"
        FontFamily="Meiryo" FontSize="22"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <UserControl.Resources>
        <!-- スタイル定義 -->
        <Style x:Key="ActiveHeaderStyle" TargetType="Ellipse">
            <Setter Property="Fill" Value="Lavender"/>
            <Setter Property="Stroke" Value="Purple"/>
            <Setter Property="StrokeThickness" Value="2"/>
        </Style>

        <Style x:Key="InactiveHeaderStyle" TargetType="Ellipse">
            <Setter Property="Fill" Value="Gray"/>
            <Setter Property="Stroke" Value="Gray"/>
            <Setter Property="StrokeThickness" Value="2"/>
        </Style>

        <Style x:Key="ActiveHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Purple"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="InactiveHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- 表紙用のボタンスタイル -->
        <Style x:Key="MainPageButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Purple"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="315" ShadowDepth="5" BlurRadius="10"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="DarkMagenta"/>
                    <Setter Property="LayoutTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SettingsButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="Foreground" Value="DarkGray"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="Margin" Value="10"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Gray"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- コンバーター -->
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </UserControl.Resources>

    <Grid Background ="White">
        <!-- 記録画面（既存のUI） -->
        <Grid x:Name="RecordingPagePanel" 
              Visibility="{Binding IsRecordingPage, Converter={StaticResource BoolToVisConverter}}">


            <!-- ヘッダーパネル -->
            <Grid VerticalAlignment="Top" x:Name="HedderPanel" 
                  SizeChanged="HedderPanel_SizeChanged">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- ホームボタン -->
                <Button Content="&#xE80F;"
                    FontSize="25"
                    FontFamily="Segoe MDL2 Assets"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Foreground="Black"
                    Margin="10"
                    Grid.Column="0"
                    Grid.RowSpan="2"
                    HorizontalAlignment="Center"
                    Command="{Binding GoToMainPageCommand}"/>

                <Canvas x:Name="lineCanvas" Grid.Column="2" Grid.ColumnSpan="3"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        ClipToBounds="True"
                        >
                    <Line x:Name="firstLine" Stroke="Gray" StrokeThickness="2"
                          />
                    <Line x:Name="secondLine" Stroke="Gray" StrokeThickness="2"/>
                </Canvas>
                
                <!-- ステップ1: 薬品スキャン -->
                <Grid Width="25" Height="25" Grid.Column="2" HorizontalAlignment="Center">
                    <Ellipse x:Name="HedderReagentIDEllipse">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="Gray"/>
                                <Setter Property="Stroke" Value="Gray"/>
                                <Setter Property="StrokeThickness" Value="2"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding PanelNumber}" Value="1">
                                        <Setter Property="Fill" Value="Purple"/>
                                        <Setter Property="Stroke" Value="Purple"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock Text="&#xE73E;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="12"
                           Foreground="Gray"
                           FontWeight="Bold"
                           TextAlignment="Center"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="Gray"/>
                                <Setter Property="FontWeight" Value="ExtraBold"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding PanelNumber}" Value="1">
                                        <Setter Property="Foreground" Value="Black"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
                <TextBlock Text="薬品ID"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextAlignment="Center"
                       FontSize="16"
                       Grid.Row="1"
                       Grid.Column="2">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="Gray"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding PanelNumber}" Value="1">
                                    <Setter Property="Foreground" Value="Purple"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- ステップ間の線1 -->
                <!--<Canvas
                    Width="100" Height="2"
                    Grid.Column="2"
                    Grid.ColumnSpan="2"
                    Background="Gray" 
                    x:Name="HedderFirstSecond"/>-->

                <!-- ステップ2: 質量測定 -->
                <Grid Width="25" Height="25" Grid.Column="3" HorizontalAlignment="Center">
                    <Ellipse x:Name="HedderMassEllipse">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="Gray"/>
                                <Setter Property="Stroke" Value="Gray"/>
                                <Setter Property="StrokeThickness" Value="2"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding PanelNumber}" Value="2">
                                        <Setter Property="Fill" Value="Lavender"/>
                                        <Setter Property="Stroke" Value="Purple"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock Text="&#xE73E;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="18"
                           TextAlignment="Center"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="Gray"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding PanelNumber}" Value="2">
                                        <Setter Property="Foreground" Value="Purple"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
                <TextBlock Text="質量測定"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextAlignment="Center"
                       FontSize="16"
                       Grid.Row="1"
                       Grid.Column="3">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="Gray"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding PanelNumber}" Value="2">
                                    <Setter Property="Foreground" Value="Purple"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- ステップ間の線2 -->
                <!--<Canvas Width="100" Height="2"
                    Background="Gray" 
                    Grid.Column="3" 
                    Grid.ColumnSpan="2"/>-->

                <!-- ステップ3: ユーザーIDスキャン -->
                <Grid Width="25" Height="25" Grid.Column="4" HorizontalAlignment="Center">
                    <Ellipse x:Name="HedderUserEllipse">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="Gray"/>
                                <Setter Property="Stroke" Value="Gray"/>
                                <Setter Property="StrokeThickness" Value="2"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding PanelNumber}" Value="3">
                                        <Setter Property="Fill" Value="Lavender"/>
                                        <Setter Property="Stroke" Value="Purple"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock Text="&#xE73E;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="18"
                           TextAlignment="Center"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="Gray"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding PanelNumber}" Value="3">
                                        <Setter Property="Foreground" Value="Purple"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
                <TextBlock Text="使用者ID"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextAlignment="Center"
                       FontSize="16"
                       Grid.Row="1"
                       Grid.Column="4">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="Gray"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding PanelNumber}" Value="3">
                                    <Setter Property="Foreground" Value="Purple"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>



            </Grid>


            <!-- メインパネル -->
            <Grid x:Name="RegisterModePanel" Margin="0,70,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="33"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.7*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="0.5*"/>
                </Grid.RowDefinitions>

                <!-- 入力パネル -->
                <StackPanel Grid.Row="1" Grid.Column="1"
                        Orientation="Vertical" 
                        VerticalAlignment="Top"
                        Margin="5">

                    <!--"{Binding InputText, UpdateSourceTrigger=PropertyChanged}"-->
                    <TextBox x:Name="InputBox"
                         Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}"
                         MinWidth="150" 
                         Height="auto" 
                         VerticalAlignment="Center" 
                         FontSize="25" 
                         BorderBrush="Black"
                         Background="GhostWhite"
                         Margin="0,50,0,10"
                         materialDesign:HintAssist.Hint="{Binding HintText}"
                         materialDesign:HintAssist.HintPaddingBrush="Purple"
                         materialDesign:HintAssist.HelperTextFontSize="12"                                                         
                         materialDesign:HintAssist.HelperText="{Binding HelperText}"
                             AcceptsReturn="False">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Return" Command="{Binding NextCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>

                    <!-- ナビゲーションボタン -->
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="btnReturn"
                            Grid.Column="0"
                            Content="戻る" 
                            Margin="0,10,0,0" 
                            Background="Transparent"
                            HorizontalAlignment="Left"
                            Height="35"
                            Foreground="Black"
                            Command="{Binding ReturnCommand}"/>

                        <Button x:Name="btnNext"
                            Grid.Column="1"                       
                            Content="{Binding BtnNextContent}" 
                            Margin="0,10,0,0" 
                            Background="Transparent"
                            HorizontalAlignment="Right"
                            Height="35"
                            Foreground="Black"
                            Command="{Binding NextCommand}"/>
                    </Grid>
                </StackPanel>

                <!-- 画像パネル -->
                <StackPanel Grid.Row="1" Grid.Column="2"
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center">
                    <Image Source="{Binding ImgPanel}"
                       HorizontalAlignment="Right"/>
                </StackPanel>

                <!-- 薬品情報表示 -->
                <StackPanel Grid.Row="2" Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        
                        Visibility="{Binding SelectedChemical}">
                    <StackPanel Margin="0,0,10,0">
                        <TextBlock Text="薬品ID:" FontWeight="SemiBold" Foreground="Gray"
                                   FontSize="16" Margin="0 10 0 0"
                                   HorizontalAlignment="Right" VerticalAlignment="Bottom"/> 
                        <TextBlock Text="薬品名:" FontWeight="SemiBold" Foreground="Gray"
                                   FontSize="16" Margin="0 10 0 0"
                                   HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                        <TextBlock Text="現在質量:" FontWeight="SemiBold" Foreground="Gray"
                                   FontSize="16" Margin="0 10 0 0"
                                   HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                    </StackPanel>
                    <StackPanel>
                        <Border BorderThickness="0 0 0 0.5" BorderBrush="MediumPurple" Margin="0 0 3 0">
                            <TextBlock Text="{Binding SelectedChemical.ChemicalId}"
                                       FontSize="16" Margin="0 10 0 0"/>
                        </Border>
                        <Border BorderThickness="0 0 0 0.5" BorderBrush="MediumPurple" Margin="0 0 3 0">
                            <TextBlock Text="{Binding SelectedChemical.Name}"
                                   TextWrapping="NoWrap" Width="200"
                                   TextTrimming="CharacterEllipsis"
                                   FontSize="16" Margin="0 10 0 0"
                                   ToolTip="{Binding SelectedChemical.Name}"
                                   />
                        </Border>
                        <Border BorderThickness="0 0 0 0.5" BorderBrush="MediumPurple" Margin="0 0 3 0">
                            <TextBlock Text="{Binding SelectedChemical.CurrentMass, StringFormat={}{0:F2}g}"
                                   FontSize="16" Margin="0 10 0 0"/>
                        </Border>
                    </StackPanel>

                    <StackPanel>
                        <!-- 薬品ステータスラベル -->
                        <Grid Margin="0,10,0,0" >
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Label Content="貸出中" 
                                FontSize="12" 
                                FontWeight="SemiBold"
                                Grid.Row="0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                BorderBrush="Gray" 
                                BorderThickness="0.1"
                                Margin="0 0 0 0"
                                >
                                <Label.Style>
                                    <Style TargetType="Label">
                                        <Setter Property="Foreground" Value="DarkGray"/>
                                        <Setter Property="Background" Value="Gray"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsInUse}" Value="True">
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="Background" Value="Purple"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Label.Style>
                            </Label>

                            <Label Content="毒　物" 
                                FontSize="12" 
                                FontWeight="SemiBold"
                                Grid.Row="2"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                BorderBrush="Gray" 
                                BorderThickness="0.1"
                                Margin="0 5 0 0">
                                <Label.Style>
                                    <Style TargetType="Label">
                                        <Setter Property="Foreground" Value="DarkGray"/>
                                        <Setter Property="Background" Value="Gray"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPoisonous}" Value="True">
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="Background" Value="Red"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Label.Style>
                            </Label>

                            <Label Content="劇　物" 
                                FontSize="12" 
                                FontWeight="SemiBold"
                                Grid.Row="4" 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                BorderBrush="Gray" 
                                BorderThickness="0.1"
                                Margin="0 5 0 0">
                                <Label.Style>
                                    <Style TargetType="Label">
                                        <Setter Property="Foreground" Value="DarkGray"/>
                                        <Setter Property="Background" Value="Gray"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsDeleterious}" Value="True">
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="Background" Value="Orange"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Label.Style>
                            </Label>
                        </Grid>
                    </StackPanel>
                </StackPanel>

                <!-- 結果パネル -->
                <Grid Grid.Row="2" Grid.Column="2" x:Name="ResultPanel">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="一時保存本数"
                           FontSize="14"
                           TextAlignment="Center"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Grid.ColumnSpan="2"/>

                    <TextBlock Text="{Binding ReagentCount}"
                           Width="auto"
                           FontSize="40"
                           TextAlignment="Center"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Grid.Row="0" Grid.Column="1"
                           Grid.RowSpan="2"
                           Margin="5,30,0,0"/>

                    <TextBlock Text="本"
                           FontSize="20"
                           TextAlignment="Center"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Right"
                           Grid.Row="0" Grid.Column="1"
                           Grid.RowSpan="2"
                           Margin="10,0,0,0"/>

                    <Button Grid.Row="0" 
                        Grid.Column="2" 
                        Grid.RowSpan="3"
                        Margin="30,0,10,0"
                        Height="80"
                        Content="記録"
                        FontSize="20"
                        Background="Purple"
                        Command="{Binding ConfirmCommand}"/>
                </Grid>

                <!-- ステータスラベル -->
                <Grid Grid.Row="2" Grid.Column="0" 
                  VerticalAlignment="Center"
                  Grid.ColumnSpan="2" 
                  HorizontalAlignment="Right"
                  Margin="0,0,0,-50">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>


                    <!-- ステータス表示エリア（必要に応じて追加） -->
                    <TextBlock Grid.Row="0" Text="{Binding StatusMessage}" 
                           FontSize="12" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="DarkGray"/>
                </Grid>
            </Grid>

        </Grid>
    </Grid>
</UserControl>