<Window x:Class="WpfApp2.Views.RegisterModeView2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2.Views"
        mc:Ignorable="d"
        Title="RegisterModeView2" Height="450" Width="1000"
        FontFamily="Segoe UI" FontSize="22"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Style="{StaticResource MaterialDesignWindow}">
    <Grid>
        <Grid x:Name="FirstViewPanel" Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.7*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.8*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button x:Name="btnToTESTMode" Click="btnToTESTView_Click"
                Width="350" Height="100" 
                Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2"
                HorizontalAlignment="center">
                <TextBlock Text="はじめる" FontSize="58" Foreground="White"/>
            </Button>

            <Button Width="100" Height="100" Grid.Column="3" Grid.Row="3"
                    HorizontalAlignment="Right" Margin="0 0 20 10">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="LightBlue" StrokeThickness="2"/>
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
                <TextBlock Text="管理" FontSize="38" Foreground="White"/>
            </Button>
        </Grid>
        
        <Grid x:Name="RegisterModePanel" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="180"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal"
                        Margin="3" Visibility="Visible" x:Name="Panel1">
                <StackPanel Orientation="Vertical" Margin="5">
                    <TextBlock Text="" Margin="5"/>
                    <TextBox x:Name="ReagentID" MinWidth="250" Width="auto" Height="auto" 
                             FontSize="20" BorderBrush="Black"
                             Background="GhostWhite"
                             Margin="15 10 0 0" VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint=" 薬品IDをスキャン・入力"
                            materialDesign:HintAssist.HelperTextFontSize="12"                                                         
                            materialDesign:HintAssist.HelperText="  スキャンすると下の表で自動検索されます"
                             />
                </StackPanel>
                <Image HorizontalAlignment="Right"
                        Source="/Resources/Images/scan.png"
                        Height="auto" Margin="20 0 0 0"/>
            </StackPanel>

            <StackPanel Grid.Row="0" Orientation="Horizontal" 
                        Margin="3" Visibility="Hidden" x:Name="Panel2">
                <StackPanel Orientation="Vertical" Margin="5">
                    <TextBlock Text="" Margin="5"/>
                    <TextBox x:Name="Mass" Width="200" Height="auto"
                            FontSize="20" BorderBrush="Black"
                             Background="GhostWhite"
                             Margin="15 10 0 0" VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="質量を送信・入力"
                            materialDesign:HintAssist.HelperTextFontSize="12"
                            materialDesign:HintAssist.HelperText="単位は不要"/>
                </StackPanel>
                <Image HorizontalAlignment="Right"
                    Source="/Resources/Images/weighing2.png"
                    Height="auto" Margin="30 0 0 0"/>
            </StackPanel>

            <StackPanel Grid.Row="0" Orientation="Horizontal"
                        Margin="3" Visibility="Hidden" x:Name="Panel3">
                <StackPanel Orientation="Vertical" Margin="5">
                    <TextBlock Text="" Margin="5"/>
                    <TextBox x:Name="UserID" Width="200" Height="auto"
                            FontSize="20" BorderBrush="Black"
                            Background="GhostWhite"
                            Margin="5 10 0 0" VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="スキャンまたは入力"
                            materialDesign:HintAssist.HelperTextFontSize="12"
                            materialDesign:HintAssist.HelperText="使用者IDをスキャンまたは入力"
                        />
                </StackPanel>
                <Image HorizontalAlignment="Right"
                    Source="/Resources/Images/weighing2.png"
                    Height="auto"/>
            </StackPanel>

            <DockPanel VerticalAlignment="Center" Margin="20 130 0 0">
                <StackPanel Orientation="Horizontal" Margin="2" Height="40">
                    <Button x:Name="btnReturn"
                                Content="戻る" Visibility="Visible"                            
                                VerticalAlignment="Top"
                                Margin="0 0 50 0" Background="Transparent"
                                ForceCursor="False"
                                Height="auto"
                                Width="auto"
                                Foreground="Black"
                                Click="btnReturn_Click"
                                />
                    <Button x:Name="btnNext"
                                Content="次へ" Visibility="Visible"                           
                                VerticalAlignment="Top"
                                Margin="50 0 0 0" Background="Transparent"
                                Height="auto"
                                Width="auto"
                                Foreground="Black"
                                Click="btnNext_Click"
                                />
                </StackPanel>
            </DockPanel>

            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <TextBox Grid.Row="1" 
                         Width="auto"
                         MinWidth="150"
                         Height="auto"
                         FontSize="16"
                         VerticalAlignment="Top"
                         TextAlignment="Left"
                         Margin="10 5 5 5"
                         materialDesign:HintAssist.Hint="薬品名で検索できます"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 />
                <Button FontFamily="Segoe MDL2 Assets"
                        Margin="-5 8 5 5"
                        Content="&#xE71F;"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Foreground="DarkGray"
                        ToolTip="編集"
                        x:Name="ResultItemBTN"
                        VerticalAlignment="Top"/><!--後でclickイベ必要-->
            </StackPanel>

            <DataGrid x:Name="dataGrid"
                      Grid.Row="1"
                      Background="WhiteSmoke"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      PreparingCellForEdit="dataGrid_PreparingCellForEdit"
                      CellEditEnding="dataGrid_CellEditEnding"
                      PreviewKeyDown="dataGrid_PreviewKeyDown"
                      Margin="0 45 0 0"
                      BorderBrush="Purple"
                      ItemsSource="{Binding Reagents}"
                      SelectedItem="{Binding SelectedReagent}"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      ColumnWidth="auto"
                      GridLinesVisibility="All"
                      Padding="0"
                  >
                
                <DataGrid.Columns>
                    <DataGridTextColumn Header="薬品番号" Binding="{Binding ID}" Width="auto" IsReadOnly="True"/>
                    <DataGridTextColumn Header="薬品名" Binding="{Binding Name}" MinWidth="1" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="毒・劇・危" FontSize="10" Binding="{Binding Class}" Width="auto" IsReadOnly="True"/>
                    <DataGridTextColumn Header="使用状況" Binding="{Binding UseStatus}" Width="auto" IsReadOnly="True"/>
                    <DataGridTextColumn Header="現在質量" Binding="{Binding Mass}" Width="auto" IsReadOnly="True"/>
                    <DataGridTextColumn Header="最終使用者" Binding="{Binding LastUserID}" Width="auto" IsReadOnly="True"/>
                    <DataGridTextColumn Header="最終使用日" Binding="{Binding LastUseDate}" Width="auto" IsReadOnly="True"/>
                    <DataGridTextColumn Header="登録日" Binding="{Binding FirstDate}" Width="auto" IsReadOnly="True"/>

                    <!-- 編集ボタン列 -->
                    <DataGridTemplateColumn Header="" Width="50">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button 
                                        FontFamily="Segoe MDL2 Assets"
                                        Content="&#xE70F;"
                                        Click="EditButton_Click"
                                        CommandParameter="{Binding}"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        Foreground="Black"
                                        HorizontalAlignment="Center"
                                        Margin="0"
                                        Padding="0"
                                    />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- 削除ボタン列 -->
                    <DataGridTemplateColumn Header=""  Width="50">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button FontFamily="Segoe MDL2 Assets"
                                        Content="&#xE74D;"
                                        Click="DeleteButton_Click"
                                        CommandParameter="{Binding}"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        Foreground="Black"
                                        HorizontalAlignment="Center"
                                        Margin="0"
                                        Padding="0"
                                        />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
