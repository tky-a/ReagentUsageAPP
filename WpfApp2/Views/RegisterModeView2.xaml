<Window x:Class="WpfApp2.Views.RegisterModeView2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2.Views"
        mc:Ignorable="d"
        Title="RegisterModeView2" Height="500" Width="600"
        FontFamily="Segoe UI" FontSize="22"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Style="{StaticResource MaterialDesignWindow}">
    <Grid>
        <Grid x:Name="FirstViewPanel" Visibility="Hidden" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.7*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.8*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button x:Name="btnToTESTMode" Click="btnToTESTView_Click"
                Width="350" Height="200" 
                Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2"
                HorizontalAlignment="center">
                <TextBlock Text="貸出返却を&#x0A;はじめる" FontSize="55" 
                           Foreground="White" TextAlignment="Center"/>
            </Button>

            <Button Width="100" Height="100" Grid.Column="3" Grid.Row="2"
                    HorizontalAlignment="Right" Margin="0 0 20 10">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="LightBlue" StrokeThickness="2"/>
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
                <TextBlock Text="新規/破棄" FontSize="21" Foreground="White"/>
            </Button>

            <Button Width="100" Height="100" Grid.Column="3" Grid.Row="3"
                    HorizontalAlignment="Right" Margin="0 0 20 10">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="LightBlue" StrokeThickness="2"/>
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
                <TextBlock Text="設定" FontSize="38" Foreground="White"/>
            </Button>
        </Grid>

        <Grid x:Name="RegisterModePanel" Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="66"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.8*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="1" Grid.Column="1"
                            Orientation="Vertical" VerticalAlignment="Top"
                            Margin="5" Visibility="Visible" x:Name="Panel">

                <TextBox x:Name="InputBox" MinWidth="150" Width="auto"
                                Height="auto" VerticalAlignment="Center" 
                                FontSize="20" BorderBrush="Black"
                                Background="GhostWhite"
                                Margin="0 70 0 10"
                                materialDesign:HintAssist.Hint=" 薬品IDをスキャン・入力"
                                materialDesign:HintAssist.HelperTextFontSize="12"                                                         
                                materialDesign:HintAssist.HelperText=" バーコードをスキャンするか入力"
                                />
                <StackPanel Margin="0 30 0 0" Grid.Row="1" Grid.Column="1"
                                HorizontalAlignment="Right" VerticalAlignment="Center"
                                Orientation="Horizontal" 
                                >
                    <Button x:Name="btnReturn"
                                        Content="戻る" Visibility="Visible"                            
                                        Margin="0 0 60 0" Background="Transparent"
                                        HorizontalAlignment="Left"
                                        ForceCursor="False"
                                        Height="35"
                                        Width="auto"
                                        Foreground="Black"
                                        />
                    <Button x:Name="btnNext"
                                        Content="次へ" Visibility="Visible"                           
                                        Margin="70 0 0 0" Background="Transparent"
                                        HorizontalAlignment="Right"
                                        Height="35"
                                        Width="auto"
                                        Foreground="Black"
                                        Click="btnNext_Click"
                                        />
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="2" Visibility="Visible"
                            HorizontalAlignment="Left" VerticalAlignment="Center">
                <Image  x:Name="ImgPanel"
                        HorizontalAlignment="Right"
                        Source="/Resources/Images/scan.png"
                        Height="200" Margin="50 0 0 0"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2">
                <StackPanel Orientation="Horizontal">
                    <Label BorderBrush="Transparent" Content="薬品番号:" FontSize="14"/>
                    <TextBlock x:Name="ReagentID" Text="1111" FontSize="14" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label x:Name="Class" 
                           Background="LightGray" 
                           Width="auto" Height="30" 
                           Content="水酸化ナトリウム"
                           FontSize="20"
                           Padding="10 0 0 0"
                           />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Background="LightPink" Text="毒・劇・危" FontSize="14" VerticalAlignment="Center"/>
                    <Label 
                           Background="LightGray" 
                           Width="auto" Height="30" 
                           Content="水酸化ナトリウム"
                           FontSize="20"
                           Padding="10 0 0 0"
                           />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Background="LightPink" Text="使用開始日" FontSize="14"/>
                    <Label  
                           Background="LightGray" 
                           Width="auto" Height="30" 
                           Content="水酸化ナトリウム"
                           FontSize="20"
                           Padding="10 0 0 0"
                           />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Background="LightPink" Text="最終使用日" FontSize="14"/>
                    <Label 
                           Background="LightGray" 
                           Width="auto" Height="30" 
                           Content="水酸化ナトリウム"
                           FontSize="20"
                           Padding="10 0 0 0"
                           />
                </StackPanel>
            </StackPanel>




        </Grid>
    </Grid>
</Window>
