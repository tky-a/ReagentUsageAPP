<Window x:Class="DrugManagerApp.Views.AllDataBase"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrugManagerApp.Views"
        mc:Ignorable="d"
        Title="AllDataBase" Height="450" Width="800"
        FontFamily="Segoe UI" FontSize="22"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Style="{StaticResource MaterialDesignWindow}"
        >
    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBox Grid.Row="1" 
             Width="auto"
             MinWidth="150"
             Height="auto"
             FontSize="16"
             VerticalAlignment="Top"
             TextAlignment="Left"
             Margin="10 5 5 5"
             BorderBrush="Black"
             materialDesign:HintAssist.Hint="薬品名で検索できます"
             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
     />
            <Button FontFamily="Segoe MDL2 Assets"
            Margin="-5 8 5 5"
            Content="&#xE71F;"
            Background="Transparent"
            BorderBrush="Transparent"
            Foreground="DarkGray"
            ToolTip="編集"
            x:Name="ResultItemBTN"
            VerticalAlignment="Top"/>
            <!--後でclickイベ必要-->
        </StackPanel>
        <DataGrid x:Name="ChemicalDataGrid"
          Grid.Row="0"
          Grid.Column="1"
          Grid.RowSpan="2"
          Background="WhiteSmoke"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          
                  
          Margin="0 60 0 0"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          ColumnWidth="*"
          RowHeight="40"
          GridLinesVisibility="All"
          Padding="0 0 0 0"                      
          CanUserReorderColumns="False"
          HeadersVisibility="Column"
      >

            <DataGrid.Columns>
                <DataGridTextColumn Header="薬品&#x0A;番号" Binding="{Binding ChemicalId}"  Width="auto" IsReadOnly="True"/>
                <DataGridTextColumn Header="薬品名" Binding="{Binding Name}" Width="auto" IsReadOnly="True"/>
                <DataGridTextColumn Header="毒劇危" Binding="{Binding Class}" Width="auto" IsReadOnly="True"/>
                <DataGridTextColumn Header="現在質量" Binding="{Binding CurrentMass}" Width="auto" IsReadOnly="True"/>
                <DataGridTextColumn Header="使用状況" Binding="{Binding UseStatus}" Width="auto" IsReadOnly="True"/>
                <DataGridTextColumn Header="保管場所" Binding="{Binding StorageLocationId}" Width="auto" IsReadOnly="True"/>
                <DataGridTextColumn Header="最終&#x0A;使用者" Binding="{Binding LastUserName}" Width="auto" IsReadOnly="True"/>
                <DataGridTextColumn Header="最終&#x0A;使用日" Binding="{Binding LastUseDate}" Width="auto" IsReadOnly="True"/>
                <DataGridTextColumn Header="登録日" Binding="{Binding FirstDate}" Width="auto" MinWidth="110" IsReadOnly="True"/>

                <!-- 編集ボタン列 -->
                <DataGridTemplateColumn Header="編集" MinWidth="60" Width="auto" MaxWidth="60">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button 
                            FontFamily="Segoe MDL2 Assets"
                            Content="&#xE70F;"
                                
                            CommandParameter="{Binding}"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Foreground="Black"
                            HorizontalAlignment="Stretch"
                            Margin="0"
                            Padding="0"
                            Height="30"
                            Width="30"
                        />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- 削除ボタン列 -->
                <DataGridTemplateColumn Header="削除" MinWidth="60" Width="auto" MaxWidth="60">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button FontFamily="Segoe MDL2 Assets"
                            Content="&#xE74D;"
                                    
                            CommandParameter="{Binding}"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Foreground="Black"
                            HorizontalAlignment="Stretch"
                            Margin="0"
                            Padding="0"
                            Height="30"
                            Width="30"
                            />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
